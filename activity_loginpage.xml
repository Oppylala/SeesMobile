<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginp"
    tools:context="com.example.user.emergencyapps.Loginpage">
    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0b0000"
        android:text="Dont have Account? Create an Account"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/loginbutton"
        android:layout_alignStart="@+id/loginbutton" />

    <EditText
        android:id="@+id/loginusername"
        android:layout_width="300dp"
        android:paddingLeft="20sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/editext"
        android:inputType="textPersonName"
        android:hint="Email"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="255dp"
        android:layout_above="@+id/loginpassword"
        android:layout_alignLeft="@+id/loginpassword"
        android:layout_alignStart="@+id/loginpassword"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="20sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/editext"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="290dp"

        android:layout_marginBottom="17dp"
        android:layout_above="@+id/loginbutton"
        android:layout_alignLeft="@+id/loginbutton"
        android:layout_alignStart="@+id/loginbutton" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/sendreport"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="350dp"
        tools:layout_editor_absoluteX="116dp"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/signup"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/loginprogress"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginbutton"
        android:layout_alignRight="@+id/signup"
        android:layout_alignEnd="@+id/signup"
        android:layout_below="@+id/loginusername"
        android:layout_alignLeft="@+id/loginpassword"
        android:layout_alignStart="@+id/loginpassword" />

</RelativeLayout>
