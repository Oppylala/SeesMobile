<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.emergencyapps.Medical">

    <LinearLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/linearLayout4">
        <ImageView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/backarrow"
            android:id="@+id/backicon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="87dp"
            android:textColor="#ddfde109"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Contact Medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="125dp"
            android:layout_gravity="center"
            android:background="@drawable/menu"
            android:onClick="showPopup"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#534803"
        android:text="You can call any of the following Contacts"/>
    <ListView
        android:id="@+id/phonenumbers"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
